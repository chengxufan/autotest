<case id="product_getById">	<context>		<item name="id">25</item>	</context>	<step note="调用产品信息接口">		<helper name="helper.request.post">			<item name="uri">product/getById</item>			<item name="params">				<param name="params[id]" format="id">%s</param>			</item>		</helper>		<return>			<item name="status">status</item>		</return>		<assert>			<item name="equals" var="status" param="10000"></item>		</assert>	</step></case>