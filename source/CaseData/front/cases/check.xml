<case id="check">	<context>		<item name="turnover">100</item>		<item name="customer_id">10010</item>		<item name="serial_number">202015</item>		<item name="product_id">25</item>		<item name="type">1</item>		<item name="flow">0</item>	</context>	<step note="调用订单接口">		<helper name="helper.request.post">			<item name="uri">order/check</item>			<item name="params">				<param name="params[product_id]" format="product_id">%s</param>				<param name="params[customer_id]" format="customer_id">%s</param>				<param name="params[serial_number]" format="serial_number">%s</param>				<param name="params[type]" format="type">%s</param>				<param name="params[flow]" format="flow">%s</param>				<param name="params[turnover]" format="turnover">%s</param>			</item>		</helper>		<return>			<item name="status">status</item>		</return>		<assert>			<item name="equals" var="status" param="10000"></item>		</assert>	</step></case>